# Local Environment
LOCAL_USER=yourusername
LOCAL_HOST=localhost

# GPU Text Generation Environment
GPU_TEXT_HOST=gpu-text.company.com
GPU_TEXT_USER=gpu_text_user

# GPU Audio Processing Environment
GPU_AUDIO_HOST=gpu-audio.company.com
GPU_AUDIO_USER=gpu_audio_user

# Web Development Environment
WEB_DEV_HOST=dev.company.com
WEB_DEV_USER=web_dev_user

# Web Staging Environment
WEB_STAGING_HOST=staging.company.com
WEB_STAGING_USER=web_staging_user

# Web Production Environment
WEB_PROD_HOST=prod.company.com
WEB_PROD_USER=web_prod_user

# Backup Settings
BACKUP_PATH=~/.ssh/backups
BACKUP_RETENTION_DAYS=30

# Security Settings
KEY_ROTATION_DAYS=90
MIN_KEY_LENGTH=4096

# Logging Settings
LOG_LEVEL=INFO
LOG_PATH=logs/ssh_manager.log
MAX_LOG_SIZE_MB=10
MAX_LOG_FILES=5

# Optional: Custom Port Configurations (if not using default 22)
# GPU_TEXT_PORT=2222
# GPU_AUDIO_PORT=2222
# WEB_DEV_PORT=22
# WEB_STAGING_PORT=22
# WEB_PROD_PORT=22

# Optional: Custom Key Path Overrides (if not using default ~/.ssh/id_rsa_*)
# LOCAL_KEY_PATH=~/.ssh/custom_local
# GPU_TEXT_KEY_PATH=~/.ssh/custom_gpu_text
# GPU_AUDIO_KEY_PATH=~/.ssh/custom_gpu_audio
# WEB_DEV_KEY_PATH=~/.ssh/custom_web_dev
# WEB_STAGING_KEY_PATH=~/.ssh/custom_web_staging
# WEB_PROD_KEY_PATH=~/.ssh/custom_web_prod
